<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Post</title>
    <link rel="stylesheet" href="style/home.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

</head>
<body>
    <div class="nav">
        <form action="/logout" method="get">
            <input class="logout" type="submit" value="log out">
        </form>
    </div>
    
    
    <div class="container">
        <div class="contain">

            
            <!-- Mypostgres! -->
            <div class="postform">
                <form action="/posting" method="post">
                    <input type="text" placeholder="tulis sesuatu" name="post" autofocus > 
                    <button type="submit">posting</button>
                </form>
            </div>
            
            
        </div>
    </div>
<div class="container py-4">
    <div class="row g-4 justify-content-center flex-wrap">
        <div class="col-12">
    <% if (data && data.length > 0 ) { %>
        <% const sortDate = data.sort((a,b)=> new Date(b.post_created_at) - new Date(a.post_created_at)) %>
        <% sortDate.forEach(post => { %>
            <div class="d-flex flex-column flex-md-row p-1 gap-4 py-md-1 align-items-center justify-content-center"> 
                <div class="list-group"> 
                    <a class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true"> 
                        <img src="../public/imglogo/iconlogo.png" alt="ichatlogo" width="32" height="32" class="rounded-circle flex-shrink-0"> 
                        <div class="d-flex gap-2 w-100 justify-content-between"> 
                            <div> <h6 class="mb-0"><%= post.name_user %></h6> 
                                <p class="mb-0 opacity-75"><%= post.content %></p> 
                            </div> 
                            <small class="opacity-50 text-nowrap"><%= new Date(post.post_created_at).toLocaleString() %></small> 
                        </div> 
                    </a>          
                </div> 
            </div>
        <% }) %>
    <% } %>
        </div>
    </div>
</div>

    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>